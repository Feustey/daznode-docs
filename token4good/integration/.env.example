# Token4Good Integration Configuration
# Copy this file to .env and fill in your actual values

# ==================== TOKEN4GOOD API CONFIGURATION ====================
T4G_API_KEY=your_token4good_api_key_here
T4G_NETWORK=testnet
T4G_BASE_URL=https://api.token4good.com/v2
T4G_LIGHTNING_ENABLED=true
T4G_RGB_ENABLED=true
T4G_MCP_ENABLED=true

# ==================== EDUCATIONAL PLATFORM SETTINGS ====================
PLATFORM_NAME=Daznode Educational Platform
TREASURY_ADDRESS=your_treasury_wallet_address
DEFAULT_CURRENCY=T4G
SUPPORTED_LANGUAGES=fr,en

# ==================== CERTIFICATE SETTINGS ====================
CERTIFICATE_ISSUER=Daznode Academy
CERTIFICATE_VALIDITY_DAYS=3650
CERTIFICATE_TEMPLATE=default

# ==================== LIGHTNING NETWORK SETTINGS ====================
LIGHTNING_NODE_ALIAS=DaznodeEducation
LIGHTNING_DEFAULT_CHANNEL_SIZE=1000000
LIGHTNING_DEFAULT_PUSH_AMOUNT=50000

# ==================== CONTENT STREAMING SETTINGS ====================
CONTENT_RATE_PER_SECOND=0.01
CONTENT_MAX_SESSION_DURATION=7200
CONTENT_BUFFER_AMOUNT=100

# ==================== LOGGING AND MONITORING ====================
LOG_LEVEL=info
LOG_FORMAT=json
MONITORING_ENABLED=false

# ==================== DEVELOPMENT SETTINGS ====================
NODE_ENV=development
DEBUG=token4good:*