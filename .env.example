# Daznode GitBook Community Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=production
PORT=3001
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://daznode:your_db_password@localhost:5432/daznode_community
DB_PASSWORD=your_secure_db_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# GitBook Integration
GITBOOK_API_TOKEN=your_gitbook_api_token
GITBOOK_API_URL=https://api.gitbook.com

# T4G Blockchain Configuration
T4G_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
ETHEREUM_PROVIDER_URL=https://mainnet.infura.io/v3/your_infura_project_id
T4G_PRIVATE_KEY=your_ethereum_private_key

# Security
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
ENCRYPTION_KEY=your_encryption_key_32_characters_long

# Kafka Configuration
KAFKA_BROKERS=localhost:9092

# Monitoring & Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_PASSWORD=your_grafana_admin_password

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
GITHUB_TOKEN=your_github_token_for_registry

# CORS Configuration
ALLOWED_ORIGINS=https://docs.dazno.de,https://daznode.com,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# OpenTelemetry
OTEL_SERVICE_NAME=daznode-gitbook-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Feature Flags
ENABLE_T4G_REWARDS=true
ENABLE_GITBOOK_INTEGRATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_SECURITY_MONITORING=true

# Development/Testing
MOCK_BLOCKCHAIN=false
MOCK_GITBOOK=false
DEBUG_LEVEL=info