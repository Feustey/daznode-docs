<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-grid">
      {% for section in navigation.footer %}
        <div class="footer-section">
          <h3>{{ section.title }}</h3>
          <ul>
            {% for item in section.items %}
              <li>
                <a href="{{ item.url }}">{{ item.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
      
      <div class="footer-section contact-info">
        <h3>Contact</h3>
        <address>
          <p>Email: <a href="mailto:contact@daznode.com">contact@daznode.com</a></p>
          <p>Téléphone: <a href="tel:+33123456789">+33 1 23 45 67 89</a></p>
        </address>
        <div class="social-links">
          <a href="https://twitter.com/daznode" target="_blank" rel="noopener">Twitter</a>
          <a href="https://github.com/daznode" target="_blank" rel="noopener">GitHub</a>
          <a href="https://linkedin.com/company/daznode" target="_blank" rel="noopener">LinkedIn</a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="footer-bottom">
    <p>&copy; {{ "now" | date("yyyy") }} Daznode. Tous droits réservés.</p>
    <p>
      <a href="/privacy/">Politique de confidentialité</a> |
      <a href="/terms/">Conditions d'utilisation</a> |
      <a href="/legal/">Mentions légales</a>
    </p>
  </div>
</footer> 