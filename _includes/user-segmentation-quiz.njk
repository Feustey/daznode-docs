<script>
  let userAnswers = {};
  let currentStep = 1;

  function initUserQuiz() {
    // Afficher le quiz apr√®s 3 secondes si pas d√©j√† fait
    if (!localStorage.getItem('userSegmentationDone')) {
      setTimeout(() => {
        document.getElementById('user-segmentation-quiz').style.display = 'flex';
        
        // Track quiz shown
        if (typeof umami !== 'undefined') {
          umami.track('Segmentation Quiz Shown');
        }
      }, 3000);
    }

    // G√©rer les clics sur les options
    document.querySelectorAll('.quiz-option').forEach(button => {
      button.addEventListener('click', function() {
        const step = this.dataset.step;
        const answer = this.dataset.answer;
        
        userAnswers[`step${step}`] = answer;
        
        if (step === '1') {
          nextQuizStep();
        } else if (step === '2') {
          showQuizResult();
        }
      });
    });
  }

  function nextQuizStep() {
    document.getElementById('step-1').classList.remove('active');
    document.getElementById('step-2').classList.add('active');
    
    // Update progress
    document.getElementById('quiz-progress').style.width = '100%';
    document.getElementById('step-counter').textContent = '2/2';
    
    currentStep = 2;
  }

  function showQuizResult() {
    document.getElementById('step-2').classList.remove('active');
    document.getElementById('step-result').classList.add('active');
    
    // D√©terminer le profil utilisateur
    const profile = determineUserProfile(userAnswers);
    
    // G√©n√©rer le contenu de r√©sultat
    const resultContent = generateResultContent(profile);
    document.getElementById('result-content').innerHTML = resultContent;
    
    // Stocker le profil utilisateur
    localStorage.setItem('userProfile', JSON.stringify(profile));
    localStorage.setItem('userSegmentationDone', 'true');
    
    // Track segmentation result
    if (typeof umami !== 'undefined') {
      umami.track('User Segmented', {
        level: userAnswers.step1,
        objective: userAnswers.step2,
        profile: profile.type
      });
    }
    
    // Masquer le footer pour le r√©sultat
    document.querySelector('.quiz-footer').style.display = 'none';
  }

  function determineUserProfile(answers) {
    const level = answers.step1;
    const objective = answers.step2;
    
    // Logique de segmentation
    if (level === 'beginner' && (objective === 'learn' || objective === 'implement')) {
      return {
        type: 'beginner-learner',
        title: 'üå± Apprenant Bitcoin',
        description: 'Parfait pour d√©buter votre parcours Bitcoin avec des explications claires et progressives.',
        primaryAction: '/getting-started/',
        primaryLabel: 'Guide Bitcoin pour d√©butants (5 min)',
        secondaryAction: '/bitcoin/introduction/',
        secondaryLabel: 'Comprendre les fondamentaux'
      };
    }
    
    if ((level === 'intermediate' || level === 'expert') && objective === 'develop') {
      return {
        type: 'developer',
        title: 'üíª D√©veloppeur Bitcoin',
        description: 'Ressources techniques avanc√©es pour d√©velopper sur Bitcoin et Lightning Network.',
        primaryAction: '/devs/',
        primaryLabel: 'Documentation d√©veloppeur',
        secondaryAction: '/devs/examples/',
        secondaryLabel: 'Exemples de code'
      };
    }
    
    if (objective === 'implement' && level !== 'beginner') {
      return {
        type: 'implementer',
        title: '‚ö° Expert Lightning',
        description: 'Guides pratiques pour configurer et optimiser votre infrastructure Lightning Network.',
        primaryAction: '/lightning-network/',
        primaryLabel: 'Configurer mon n≈ìud Lightning (15 min)',
        secondaryAction: '/solutions/dazbox/',
        secondaryLabel: 'Solution DazBox cl√© en main'
      };
    }
    
    if (objective === 'business') {
      return {
        type: 'business',
        title: 'üè¢ Professionnel Bitcoin',
        description: 'Solutions professionnelles pour int√©grer Bitcoin dans votre activit√© commerciale.',
        primaryAction: '/token4good/',
        primaryLabel: 'Rejoindre 2500+ professionnels Bitcoin',
        secondaryAction: '/solutions/dazpay/',
        secondaryLabel: 'Solution de paiement DazPay'
      };
    }
    
    // Fallback
    return {
      type: 'explorer',
      title: 'üéØ Explorateur Bitcoin',
      description: 'D√©couvrez toutes les facettes de Bitcoin et choisissez votre parcours.',
      primaryAction: '/getting-started/',
      primaryLabel: 'Commencer l\'exploration',
      secondaryAction: '/glossary/',
      secondaryLabel: 'Consulter le glossaire'
    };
  }

  function generateResultContent(profile) {
    return `
      <div class="result-card">
        <h4>${profile.title}</h4>
        <p>${profile.description}</p>
        <div class="result-actions">
          <a href="${profile.primaryAction}" class="result-btn primary" onclick="closeUserQuiz()">
            ${profile.primaryLabel} ‚Üí
          </a>
          <a href="${profile.secondaryAction}" class="result-btn" onclick="closeUserQuiz()">
            ${profile.secondaryLabel}
          </a>
        </div>
      </div>
    `;
  }

  function closeUserQuiz() {
    document.getElementById('user-segmentation-quiz').style.display = 'none';
  }

  // Initialiser le quiz au chargement de la page
  document.addEventListener('DOMContentLoaded', initUserQuiz);
</script>