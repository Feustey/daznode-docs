<div class="header-container">
  <div class="logo">
    <a href="/">
      <img src="/assets/images/logo.svg" alt="Daznode Logo" width="150" height="50">
    </a>
  </div>

  <nav class="main-nav">
    <ul>
      {% for item in navigation.main %}
        <li class="nav-item {% if item.children %}has-dropdown{% endif %}">
          <a href="{{ item.url }}" {% if page.url == item.url %}aria-current="page"{% endif %}>
            {{ item.title }}
          </a>
          {% if item.children %}
            <ul class="dropdown">
              {% for child in item.children %}
                <li>
                  <a href="{{ child.url }}" {% if page.url == child.url %}aria-current="page"{% endif %}>
                    {{ child.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>

  <div class="header-actions">
    <div id="search"></div>
    <a href="/contact" class="contact-button">Nous contacter</a>
  </div>
</div> 