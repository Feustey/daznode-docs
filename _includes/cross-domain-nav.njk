<script>
// Tracking cross-domain avec UTM et Analytics
document.addEventListener('DOMContentLoaded', function() {
  const crossDomainLinks = document.querySelectorAll('.cross-domain-nav .nav-link[href^="https://dazno.de"]');
  
  crossDomainLinks.forEach(link => {
    link.addEventListener('click', function(e) {
      const utmContent = this.getAttribute('data-utm') || 'cross-domain-nav';
      const currentPage = window.location.pathname;
      
      // Ajouter UTM parameters
      const url = new URL(this.href);
      url.searchParams.set('utm_source', 'docs');
      url.searchParams.set('utm_medium', 'internal_link');
      url.searchParams.set('utm_campaign', 'docs_to_commercial');
      url.searchParams.set('utm_content', utmContent);
      url.searchParams.set('utm_term', currentPage);
      
      this.href = url.toString();
      
      // Analytics event
      if (typeof gtag !== 'undefined') {
        gtag('event', 'cross_domain_click', {
          source_domain: 'docs.dazno.de',
          target_domain: 'dazno.de',
          link_context: utmContent,
          source_page: currentPage,
          user_journey_stage: 'documentation_to_commercial'
        });
      }
    });
  });
});
</script>