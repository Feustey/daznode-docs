<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- DNS Prefetch pour optimisation cross-domain -->
  <link rel="dns-prefetch" href="//dazno.de">
  <link rel="preconnect" href="https://dazno.de">
  
  <!-- Métadonnées de base -->
  {% set pageMetadata = metadata.pages[page.filePathStem] %}
  {% set pageTitle = pageMetadata.title or title or metadata.site.title %}
  {% set pageDescription = pageMetadata.description or description or metadata.site.description %}
  {% set pageKeywords = pageMetadata.keywords or metadata.site.keywords %}
  
  <title>{{ pageTitle }}</title>
  <meta name="description" content="{{ pageDescription }}">
  <meta name="keywords" content="{{ pageKeywords }}">
  <meta name="author" content="{{ metadata.site.author }}">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ metadata.site.url }}{{ page.url }}">
  <meta property="og:title" content="{{ pageTitle }}">
  <meta property="og:description" content="{{ pageDescription }}">
  <meta property="og:image" content="{{ metadata.site.url }}{{ metadata.site.defaultImage }}">
  <meta property="og:site_name" content="{{ metadata.site.title }}">
  <meta property="og:locale" content="fr_FR">
  
 
  
  <!-- Autres métadonnées -->
  <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
  <meta name="googlebot" content="index, follow">
  <meta name="theme-color" content="{{ metadata.site.themeColor }}">
  <link rel="canonical" href="{{ metadata.site.url }}{{ page.url }}">
  
  <!-- Schema.org Cross-Domain pour Google -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "TechArticle",
      "headline": "{{ pageTitle }}",
      "description": "{{ pageDescription }}",
      "image": "{{ metadata.site.url }}{{ metadata.site.defaultImage }}",
      "author": {
        "@type": "Organization",
        "name": "{{ metadata.site.author }}",
        "url": "https://dazno.de",
        "logo": {
          "@type": "ImageObject",
          "url": "https://dazno.de/assets/images/logo.png"
        }
      },
      "publisher": {
        "@type": "Organization",
        "name": "DazNode",
        "url": "https://dazno.de",
        "logo": {
          "@type": "ImageObject",
          "url": "https://dazno.de/assets/images/logo.png"
        },
        "sameAs": [
          "{{ metadata.site.url }}",
          "https://dazno.de/api",
          "https://github.com/daznode"
        ]
      },
      "url": "{{ metadata.site.url }}{{ page.url }}",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ metadata.site.url }}{{ page.url }}"
      },
      "isPartOf": {
        "@type": "Website",
        "name": "DazNode Ecosystem",
        "url": "https://dazno.de"
      },
      "about": {
        "@type": "SoftwareApplication",
        "name": "DazNode Lightning Network Solutions",
        "applicationCategory": "BusinessApplication",
        "operatingSystem": "Linux",
        "offers": {
          "@type": "Offer",
          "url": "https://dazno.de/pricing",
          "priceCurrency": "EUR"
        }
      }
    }
  </script>
  
