    </div>
  </header>

  <div class="main-container">    
    <aside class="sidebar" id="mobile-sidebar" role="navigation" aria-label="Navigation principale">
      <nav id="navigation" class="sidebar-nav">
        {% include "navigation-accessible.njk" %}
      </nav>
    </aside>
    
    <main id="main-content" class="content" role="main" tabindex="-1">
      <div class="content-container" data-pagefind-body>
        {% if title %}
        <h1 class="page-title">{{ title }}</h1>
        {% endif %}
        {{ content | safe }}
      </div>
    </main>
  </div>
  
