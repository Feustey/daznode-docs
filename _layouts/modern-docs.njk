<script>
document.addEventListener('DOMContentLoaded', function() {
  // G√©n√©ration automatique de la table des mati√®res
  function generateTOC() {
    const headings = document.querySelectorAll('.docs-content h2, .docs-content h3, .docs-content h4');
    const tocList = document.getElementById('toc-list');
    
    if (!tocList || headings.length === 0) return;

    headings.forEach((heading, index) => {
      // Ajouter un ID si pas d√©j√† pr√©sent
      if (!heading.id) {
        heading.id = `heading-${index}`;
      }

      const li = document.createElement('li');
      const a = document.createElement('a');
      a.href = `#${heading.id}`;
      a.textContent = heading.textContent;
      
      // Ajouter une classe selon le niveau
      a.className = `toc-${heading.tagName.toLowerCase()}`;
      
      li.appendChild(a);
      tocList.appendChild(li);
    });
  }

  // Mise en surbrillance de la section active
  function highlightActiveSection() {
    const headings = document.querySelectorAll('.docs-content h2, .docs-content h3, .docs-content h4');
    const tocLinks = document.querySelectorAll('.toc-list a');
    
    let activeIndex = 0;
    const scrollTop = window.pageYOffset + 100;

    headings.forEach((heading, index) => {
      if (heading.offsetTop <= scrollTop) {
        activeIndex = index;
      }
    });

    tocLinks.forEach((link, index) => {
      link.classList.toggle('active', index === activeIndex);
    });
  }

  // Toggle TOC sur mobile
  const tocToggle = document.getElementById('toc-toggle');
  const tocNav = document.getElementById('toc-nav');
  
  if (tocToggle && tocNav) {
    tocToggle.addEventListener('click', () => {
      tocNav.classList.toggle('expanded');
    });
  }

  // Feedback system
  const feedbackBtns = document.querySelectorAll('.feedback-btn');
  const feedbackForm = document.getElementById('feedback-form');
  
  feedbackBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const feedback = btn.dataset.feedback;
      
      // Analytics
      if (typeof gtag !== 'undefined') {
        gtag('event', 'page_feedback', {
          event_category: 'engagement',
          event_label: feedback,
          page_path: window.location.pathname
        });
      }
      
      if (feedback === 'negative' && feedbackForm) {
        feedbackForm.style.display = 'block';
      } else {
        // Afficher un message de remerciement
        if (window.modernApp) {
          window.modernApp.showNotification('Merci pour votre feedback !', 'success');
        }
      }
      
      // D√©sactiver les boutons
      feedbackBtns.forEach(b => b.disabled = true);
    });
  });

  // Initialiser
  generateTOC();
  
  // Event listeners
  window.addEventListener('scroll', highlightActiveSection, { passive: true });
  
  // Initial highlight
  highlightActiveSection();
});
</script>